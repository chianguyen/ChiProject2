<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.fragments.PropertyRmv"
    android:background="@color/white">

    <ImageView
        android:src="@drawable/house_symbol"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Please input the id of the property for removal"
        android:textSize="25sp"
        android:textColor="@color/actual_blue"
        android:textAlignment="center"
        android:fontFamily="@font/marko_one"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Property ID"
        android:textAlignment="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/actual_blue">

        <EditText
            android:id="@+id/property_rmv_id"
            android:textSize="15sp"
            android:textColor="@color/actual_blue"
            android:fontFamily="casual"
            android:singleLine="true"
            android:backgroundTint="@color/actual_blue"
            android:textAlignment="center"
            android:inputType="text"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_prop_rmv"
        android:text="Remove"
        app:cornerRadius="10dp"
        app:backgroundTint="@color/actual_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/marko_one"
        android:textSize="14sp"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>