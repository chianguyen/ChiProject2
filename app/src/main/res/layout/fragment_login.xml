<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="casual"
        android:text="PROPERTITAN"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:fontFamily="@font/marko_one" />

    <!--Email Field-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="50dp"
        android:textColorHint="@color/white">

        <EditText
            android:id="@+id/login_edit_email"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="casual"
            android:backgroundTint="@color/white"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <!--Pwd Field-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/white">

        <EditText
            android:id="@+id/login_edit_password"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="casual"
            android:inputType="textPassword"
            android:singleLine="true"
            android:backgroundTint="@color/white"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <CheckBox
            android:id="@+id/login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="Remember Login" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/text_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/marko_one"
            android:text="forgot password?"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"
            app:backgroundTint="#00ffffff" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_login"
        android:text="Login"
        android:textColor="@color/white"
        android:fontFamily="@font/marko_one"
        app:backgroundTint="@color/deep_red"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/white"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="- OR -"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/marko_one"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/text_register"
        android:text="Don't have an account? \nRegister now!"
        android:textColor="@color/white"
        android:fontFamily="@font/marko_one"
        app:backgroundTint="#00ffffff"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>