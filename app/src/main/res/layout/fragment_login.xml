<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="casual"
        android:text="PROPERTITAN"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:fontFamily="@font/marko_one" />

    <!--Email Field-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="50dp"
        android:textColorHint="@color/white">

        <EditText
            android:id="@+id/login_edit_email"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="casual"
            android:backgroundTint="@color/white"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <!--Pwd Field-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/white">

        <EditText
            android:id="@+id/login_edit_password"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="casual"
            android:singleLine="true"
            android:backgroundTint="@color/white"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/login_checkbox"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="55dp"
        android:layout_gravity="left"
        android:text="Remember Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_login"
        android:text="Login"
        android:textColor="@color/white"
        android:fontFamily="@font/marko_one"
        app:backgroundTint="@color/deep_red"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/white"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/text_register"
        android:text="Don't have an account? \nRegister now!"
        android:textColor="@color/white"
        android:fontFamily="@font/marko_one"
        app:backgroundTint="#00ffffff"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/text_forgot"
        android:text="I forgot my password"
        android:textColor="@color/white"
        android:fontFamily="@font/marko_one"
        app:backgroundTint="#00ffffff"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>