<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.fragments.TennantDetail"
    android:background="@color/white">

    <TextView
        android:id="@+id/personal_name"
        android:text="email"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:fontFamily="@font/marko_one"
        android:textSize="40dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:src="@drawable/tenant_ic"
        android:id="@+id/personal_img"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="170dp"
        android:layout_height="170dp"/>

    <LinearLayout
        android:weightSum="3"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tenant_call"
            android:layout_weight="1"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tenant_text"
            android:layout_weight="1"
            android:src="@drawable/ic_sms_black_24dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tenant_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/blue"
            android:src="@drawable/ic_email_black_24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/personal_email"
        android:text="email"
        android:textColor="@color/blue"
        android:textAlignment="viewStart"
        android:fontFamily="@font/marko_one"
        android:textSize="22dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/personal_phone"
        android:text="phone"
        android:textColor="@color/blue"
        android:textAlignment="viewStart"
        android:fontFamily="@font/marko_one"
        android:textSize="22dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>