<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.LandingActivityT"
    android:background="@drawable/bg_pic">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarT"
        android:background="@color/actual_blue"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROPERPOTENT"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone"
            android:fontFamily="@font/marko_one"
            android:textAlignment="center"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/main_frameT"
        android:layout_width="match_parent"
        android:layout_height="558dp"
        android:layout_below="@id/toolbarT">
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navViewT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:menu="@menu/nav_item_t"
        android:background="@color/actual_blue"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
    </com.google.android.material.bottomnavigation.BottomNavigationView>



</RelativeLayout>